<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#196C19"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="1">
    <!--android:gravity="center|center_vertical"
    tools:context="com.mycompany.foo.MainActivity"-->


    <!-- help from http://www.techrepublic.com/article/pro-tip-round-corners-on-an-android-imageview-with-this-hack/-->

    <ImageView
        android:src="@drawable/frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView" />

    <Button
        android:layout_width="70pt"
        android:layout_height="30pt"
        android:text="@string/link_message1"
        android:id="@+id/link_message1"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:background="#196C19"
        android:onClick="getPDF1"
        android:layout_alignLeft="@+id/resellbuy"
        android:layout_alignStart="@+id/resellbuy"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="50pt"
        android:layout_height="30pt"
        android:text="@string/link_message2"
        android:id="@+id/link_message2"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:background="#196C19"
        android:onClick="getPDF2"
        android:layout_alignTop="@+id/link_message1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reuse"
        android:id="@+id/resellbuy"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:background="@drawable/button"
        android:onClick="getCategoriesHandler"
        android:layout_below="@+id/repair"
        android:layout_alignLeft="@+id/repair"
        android:layout_alignStart="@+id/repair"
        android:layout_alignRight="@+id/link_message2"
        android:layout_alignEnd="@+id/link_message2" />

    <Button
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/repair"
        android:id="@+id/repair"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:background="@drawable/button"
        android:onClick="getCategoriesHandler"
        android:layout_below="@+id/explore"
        android:layout_alignLeft="@+id/explore"
        android:layout_alignStart="@+id/explore"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/explore"
        android:id="@+id/explore"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:background="@drawable/button"
        android:onClick="getCategoriesHandler"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10pt"
        android:gravity="center" >

        <FrameLayout
            android:layout_gravity="center_horizontal|top"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/frameLayout">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"

                android:layout_gravity="center_horizontal|top"
                android:padding="5dp"
                android:src="@drawable/sustainablefeet"/>

            <ImageView
                android:src="@drawable/frame"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal|top" />

        </FrameLayout>


        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:paddingTop="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/message"
            android:background="#196C19"
            android:id="@+id/message"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="5pt"
            android:layout_alignBottom="@+id/frameLayout"
            android:layout_toRightOf="@+id/frameLayout"
            android:layout_alignTop="@+id/frameLayout" />

    </LinearLayout>



</RelativeLayout>
